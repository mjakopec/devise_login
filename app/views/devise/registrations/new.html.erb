<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=>"panel-body"}) do |f| %>
<fieldset>
  <%= devise_error_messages! %>
	<div class="field">
		<%= f.label :name %>
	    <%= f.text_field :name, :class => "text"  %>
	</div>

  <div class="field">
  	<%= f.label :email %>
    <%= f.email_field :email, :class => "text" %>
  </div>

  <div class="field">
  	<%= f.label :password %>
    <%= f.password_field :password, :class => "text" %>
  </div>

  <div class="field">
  	<%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "text" %>
  </div>

  <div class="submit"><%= f.submit "Sign up", :class => "submit" %></div><br />
</fieldset>
<% end %>
<%= render "devise/shared/links" %><br />